<body>
  <h1>Order History</h1>

  <h2>Successful Orders</h2>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Customer Name</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <!-- Display successful orders -->
      <tr th:each="order : ${orders}" th:if="${order.orderStatus == 'success'}">
        <td th:text="${order.orderId}"></td>
        <td th:text="${order.date}"></td>
        <td th:text="${order.customerName}"></td>
        <td th:text="${order.total}"></td>
      </tr>
    </tbody>
  </table>

  <h2>Rejected Orders</h2>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Customer Name</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <!-- Display rejected orders -->
      <tr th:each="order : ${orders}" th:if="${order.orderStatus == 'rejected'}">
        <td th:text="${order.orderId}"></td>
        <td th:text="${order.date}"></td>
        <td th:text="${order.customerName}"></td>
        <td th:text="${order.total}"></td>
      </tr>
    </tbody>
  </table>
